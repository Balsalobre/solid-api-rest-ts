{
  "name": "solid-api",
  "version": "1.0.0",
  "description": "API REST usando principios SOLID",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "bun run src/server.ts",
    "dev": "bun --watch src/server.ts",
    "build": "bun build src/server.ts --outdir=dist --target=node",
    "start:prod": "bun run dist/server.js",
    "lint": "eslint src/**/*.ts --no-warn-ignored",
    "lint:fix": "eslint src/**/*.ts --fix --no-warn-ignored",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts"
  },
  "keywords": [
    "solid"
  ],
  "author": "cbalsalobre",
  "license": "ISC",
  "dependencies": {
    "express": "4.21.2",
    "nodemailer": "6.10.1"
  },
  "devDependencies": {
    "@types/express": "4.17.23",
    "@types/nodemailer": "6.4.19",
    "@typescript-eslint/eslint-plugin": "7.18.0",
    "@typescript-eslint/parser": "7.18.0",
    "eslint": "8.57.1",
    "prettier": "3.6.2",
    "typescript": "5.9.2"
  }
}
